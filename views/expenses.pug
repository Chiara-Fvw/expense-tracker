extends layout 

block main 
  section#expenses
    h1(class='sectionTitle')= categoryTitle+"'s Expenses"
    if expenses.length === 0
      p There are no expenses for this category.
      a(href="#") Create one now! 
    else
      ul(class="sectionActions") 
        li 
          a(href="#") ORDER BY TITLE
        li 
          a(href="#") ORDER BY AMOUNT
        li 
          a(href="#") ORDER BY DATE
      table(class="expenses")
        tr 
          th Expense 
          th Amount 
          th Date
        each expense in expenses 
          tr 
            td= expense.title
            td= expense.amount+` â‚¬` 
            td= expense.expense_date.toString().substring(4, 15)

block headerLinks
  nav(class="actionMenu")
    a(href="/categories") CATEGORIES
    a(href="/categories") EDIT LIST
    a(href="/categories") ADD EXPENSE