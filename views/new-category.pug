extends layout 
block main 
  form(action="/categories" method="post")
    dl 
      dt 
        label(for="categoryTitle") Enter the new category title 
      dd 
        input(type="text"
              id="categoryTitle"
              name="categoryTitle"
              placeholder="Category Title"
              value=categoryTitle)
    fieldset 
      input(type="submit" value="Save")
      a(href="/categories") Cancel 